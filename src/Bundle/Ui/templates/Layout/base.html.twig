{%- set locale = app.request.locale|split('_')[0] -%}
<!doctype html>

<html lang="{{ locale }}">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <title>{{ block('page_title') is defined  ? block('page_title') : '' }}</title>

    {# TODO: Allow to define a custom theme color #}
    <meta name="msapplication-TileColor" content="#066fd1" />
    <meta name="theme-color" content="#066fd1" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="HandheldFriendly" content="True" />
    <meta name="MobileOptimized" content="320" />

    {% if app.current_route is not empty -%}
        <meta name="canonical" content="{{ url(app.current_route, app.current_route_parameters, false) }}" />
    {%- endif %}

    {# TODO: Add description and keywords meta #}
    {# <meta name="description" content=""> #}

    <link rel="icon" href="{{ asset('/favicon.ico') }}" type="image/x-icon" />
    <link rel="shortcut icon" href="{{ asset('/favicon.ico') }}" type="image/x-icon" />

    {% block stylesheets %}
        {{ encore_entry_link_tags('_platform_ui') }}
    {% endblock stylesheets %}
</head>
<body>
{% block body %}{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('_platform_ui') }}
{% endblock javascripts %}
</body>
</html>
